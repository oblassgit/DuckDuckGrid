<resources>
    <!-- Base application theme. -->
    <style name="Theme.DuckDuckGrid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_400</item>
        <item name="colorPrimaryVariant">@color/orange_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/orange_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pastel_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/dark_grey</item>
    </style>
    <style name="Theme.DuckDuckGrid.Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">#ADADAD</item>
    </style>
    <style name="CustomShowcaseViewTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#B3000000</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CustomFab">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>
</resources>