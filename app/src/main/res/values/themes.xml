<resources>
    <!-- Base application theme. -->
    <style name="Theme.DuckDuckGrid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_800</item>
        <item name="colorSecondaryVariant">@color/green_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.DuckDuckGrid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GridViewTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GridViewTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.DuckDuckGrid.Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">#676767</item>
    </style>
</resources>