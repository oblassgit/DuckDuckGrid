<resources>
    <!-- Base application theme. -->
    <style name="Theme.DuckDuckGrid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_200</item>
        <item name="colorPrimaryVariant">@color/yellow_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/orange_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pastel_blue</item>
        <item name="colorSecondaryVariant">@color/green_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/cream</item>
    </style>

    <style name="Theme.DuckDuckGrid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DuckDuckGrid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DuckDuckGrid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.DuckDuckGrid.Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">#676767</item>
    </style>

    <style name="CustomShowcaseViewTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#B3FFFFFF</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>

    </style>
    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CustomFab">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>
</resources>